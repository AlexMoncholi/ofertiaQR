<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Ofertia QR</name>

    <description>
        QR scanner/maker from Ofertia.
    </description>

    <author href="https://www.ofertia.com" email="alejandro.moncholi@ofertia.com">
        Alejandro Monchol√≠
    </author>

  <content src="index.html" />
  <platform name="android">
      <preference name="Fullscreen" value="false" />
      <preference name="Orientation" value="portrait" />
  </platform>
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
    <plugin name="cordova-plugin-media" spec="~3.0.1" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <plugin name="cordova-plugin-media-capture" spec="~1.4.3" />
  <icon src="img/icon.png" platform="android" />

  <access origin="*" />

</widget>