<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Ofertia QR</name>

    <description>
        QR scanner/maker from Ofertia.
    </description>

    <author href="https://www.ofertia.com" email="alejandro.moncholi@ofertia.com">
        Alejandro Monchol√≠
    </author>

        <content src="index.html"/>
        <platform name="android">
            <preference name="Fullscreen" value="false"/>
            <preference name="Orientation" value="portrait"/>
            <preference name="enabled" value="true"/>
        </platform>
        <plugin name="cordova-plugin-device" spec="~1.1.6"/>
        <plugin name="cordova-plugin-media" spec="~3.0.1"/>
        <plugin name="cordova-plugin-camera" spec="~2.4.1"/>
        <plugin name="cordova-plugin-media-capture" spec="~1.4.3"/>
        <plugin name="cordova-plugin-console" spec="*"/>
        <plugin name="cordova-plugin-file" spec="*"/>
        <plugin name="cordova-plugin-inappbrowser" spec="*"/>
        <icon src="img/icon.png" platform="android"/>
        <access origin="*"/>
        <preference name="android-targetSdkVersion" value="19"/>
        <feature name="http://api.phonegap.com/1.0/camera"/>
        <feature name="http://api.phonegap.com/1.0/file"/>
        <feature name="Camera">
            <param name="android-package" value="org.apache.cordova.CameraLauncher" />
        </feature>

</widget>